<h2>Who has more personal appeal?</h2>

<div class="row">  
  <div class="span12" align="center">
    <br/>
    <%= render :partial => 'bannerform', :locals => { :winner => @contenders[0], :loser => @contenders[1] } %>

    <br/>
    <h3>OR</h3>
    <br/>
    
    <%= render :partial => 'bannerform', :locals => { :winner => @contenders[1], :loser => @contenders[0] } %>
  </div>
  
  <div class="span4">
    
    <% if !flash[:last_battle_id].nil? %>
      
      <div class="results alert-message block-message warning">
        <p><strong>Results</strong></p>
        
        <table>
          <tr>
            <td><%= image_tag @last_winner.headshot, :width => 24, :style => "border: 2px solid green;" %>
            <td><%= @last_winner.wins %> wins 
            <td>(<%= number_to_percentage @last_winner.ratio * 100, :precision => 0 %>)
          </tr>
          <tr>
            <td><%= image_tag @last_loser.headshot, :width => 24, :style => "border: 2px solid red;" %>
            <td><%= @last_loser.wins %> wins 
            <td>(<%= number_to_percentage @last_loser.ratio * 100, :precision => 0 %>)
          </tr>
        </table>
        
        <p><%= link_to "See the full rankings. Â»", contenders_path %></p>
        <!-- <div class="alert-actions">
          <a class="btn small" href="#">Do something</a>
        </div> -->
      </div>
    <% end %>
    
  </div>
  
</div>


